def piramide_1():
    h=input("Dime la altura de la piramide")
    espacios=" "
    asteriscos="*"
    h=h+1
    for i in range(1,h):
        for nespacios in range(1,h-i):
            espacios=espacios+" "
        for nasteriscos in range(1,2*i-1):
            asteriscos=asteriscos+"*"
        print espacios + asteriscos
        espacios=" "
        asteriscos="*"
piramide_1()
